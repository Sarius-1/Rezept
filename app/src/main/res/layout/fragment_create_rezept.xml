<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Neues Rezept erstellen"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Rezeptname -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_rezept_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Rezeptname"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Bild hinzufügen -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rezeptbild"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/iv_rezept_bild"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@android:color/darker_gray"
                android:contentDescription="Rezeptbild"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_bild_hinzufuegen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"
                app:srcCompat="@android:drawable/ic_menu_camera"/>
        </FrameLayout>

        <!-- Kategorien -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategorie"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <CheckBox
                android:id="@+id/cb_vegetarisch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vegetarisch"
                android:layout_marginEnd="8dp"/>

            <CheckBox
                android:id="@+id/cb_vegan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vegan"
                android:layout_marginEnd="8dp"/>

            <CheckBox
                android:id="@+id/cb_fleisch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fleisch" />

            <CheckBox
                android:id="@+id/cb_fisch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Fisch" />
        </LinearLayout>

        <!-- Beschreibung -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_beschreibung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kurze Beschreibung"
                android:inputType="textMultiLine"
                android:minLines="2"
                android:maxLines="5"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Portionen -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_portionen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Portionen"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Zubereitungszeit -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_zubereitungszeit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Zubereitungszeit (Minuten)"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Zutaten -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zutaten"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_zutaten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:nestedScrollingEnabled="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_zutat_menge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Menge"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_zutat_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Zutat"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_zutat_hinzufuegen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zutat hinzufügen"
            android:layout_marginBottom="16dp"/>

        <!-- Zubereitungsschritte -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zubereitung"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_zubereitung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Zubereitungsschritte"
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="top|start"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Speichern Button -->
        <Button
            android:id="@+id/btn_rezept_speichern"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rezept speichern"
            android:layout_marginTop="16dp"
            style="@style/Widget.MaterialComponents.Button"/>

    </LinearLayout>

</ScrollView>