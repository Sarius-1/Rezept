<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Wetteranzeige oben links -->
    <TextView
        android:id="@+id/weather_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wetter"
        android:background="#DDDDDD"
        android:padding="8dp"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Button zur Einkaufsliste (oben Mitte) -->
    <Button
        android:id="@+id/button_einkaufsliste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Einkaufsliste"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/weather_info"
        app:layout_constraintEnd_toStartOf="@id/button_home"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Button für Startseite mit Haus-Icon (oben rechts) -->
    <ImageButton
        android:id="@+id/button_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_view"
        android:contentDescription="Zur Startseite"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Überschrift "Einkaufsliste" -->
    <TextView
        android:id="@+id/label_einkaufsliste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Einkaufsliste"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/button_einkaufsliste"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Button "Ausgewählte löschen" rechts neben Überschrift -->
    <Button
        android:id="@+id/button_delete_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ausgewählte löschen"
        app:layout_constraintTop_toTopOf="@id/label_einkaufsliste"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ListView mit individuellen Listeneinträgen, jetzt mit match_parent für die Höhe -->
    <ListView
        android:id="@+id/list_einkaufsliste"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/label_einkaufsliste"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>